<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/signin_button_text</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/beige</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="SignInTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/main_red</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/main_red</item>
        <item name="android:tint">@color/main_red</item>
    </style>

    <style name="ManagedServicesTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/main_red</item>
    </style>

    <style name="HeadingTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/main_red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubheadingTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:background">@color/main_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DataTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/main_red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/main_red</item>
    </style>

    <style name="DateTextViewTheme">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/main_red</item>
        <item name="android:drawableRight">@drawable/ic_calendar</item>
        <item name="android:drawableEnd">@drawable/ic_calendar</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/grey_border_rect_shape</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@color/white</item>
        <!--<item name="android:textColorPrimary">@color/black_text</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:tint">@color/white</item>
        <!--<item name="android:textColorPrimary">@color/black_text</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="WifiAnalyzerTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ExpandableLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ael_expanded">false</item>
        <item name="ael_duration">500</item>
        <item name="ael_interpolator">fastOutSlowIn</item>
    </style>

    <style name="FaqWhiteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:onClick">onFaqClicked</item>
    </style>

    <style name="FaqPinkTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/faq_pink</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:onClick">onFaqClicked</item>
    </style>

    <style name="PageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintStart_toEndOf">@+id/home_button</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="PageSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="layout_constraintStart_toStartOf">@+id/page_title</item>
        <item name="layout_constraintTop_toBottomOf">@+id/page_title</item>
    </style>

    <style name="PageBackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="StyledTopImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/group201</item>
        <item name="android:translationY">-20dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="TransactionListText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
