<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ManageSettingsActivity"
    tools:showIn="@layout/activity_manage_settings">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="18dp"-->
                <!--android:background="@color/main_grey" />-->

            <TextView
                style="@style/SubheadingTextTheme"
                android:text="Service Plan(Advantage Basic)" />

            <TextView
                style="@style/SubheadingTextTheme"
                android:background="@color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="33 Cooper Road, Ikoyi, Lagos, Nigeria" />

            <TextView
                style="@style/SubheadingTextTheme"
                android:background="@color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="Device Number: RCMG18C0012E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/SubheadingTextTheme"
                    android:textStyle="normal"
                    android:text="Settings"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

                <TextView
                    style="@style/SubheadingTextTheme"
                    android:textStyle="normal"
                    android:text="Status"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

                <TextView
                    style="@style/SubheadingTextTheme"
                    android:textStyle="normal"
                    android:text="Actions"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/SubheadingTextTheme"
                    android:textStyle="normal"
                    android:text="Analytics"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

                <TextView
                    style="@style/SubheadingTextTheme"
                    android:textStyle="normal"
                    android:text="Disabled"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

                <Switch
                    android:layout_height="12dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:paddingEnd="30dp"
                    android:paddingRight="30dp"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/main_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/SubheadingTextTheme"
                    android:textStyle="normal"
                    android:text="Auto-Renewal"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

                <TextView
                    style="@style/SubheadingTextTheme"
                    android:textStyle="normal"
                    android:text="Diasabled"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

                <Switch
                    android:layout_height="12dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:paddingEnd="30dp"
                    android:paddingRight="30dp"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/main_grey"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>