<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ManageServiceActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="150dp">

            <TextView
                android:id="@+id/service_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:maxWidth="250dp"
                android:text="Advantage Basic"
                android:textColor="@color/black_text"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance:"
                    android:textColor="@color/black_text" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="N45,000"
                    android:textColor="@color/beige" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date:"
                    android:textColor="@color/black_text" />

                <TextView
                    android:id="@+id/expiryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="May 1, 2019"
                    android:textColor="@color/beige" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="8dp"
                android:background="@color/main_grey" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/data_menu_blue"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0dp">

                    <TextView
                        android:id="@+id/service_renew"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/ic_renew"
                        android:gravity="center"
                        android:onClick="onMenuItemSelected"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:text="Renew Subscription"
                        android:textColor="@color/white"
                        android:background="@drawable/click_indicator"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/data_menu_cyan"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0dp">

                    <TextView
                        android:id="@+id/service_data_usage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/ic_view_data_usage"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:onClick="onMenuItemSelected"
                        android:padding="4dp"
                        android:text="View Data Usage"
                        android:textColor="@color/white"
                        android:background="@drawable/click_indicator"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/data_menu_green"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0dp">

                    <TextView
                        android:id="@+id/service_change_wifi_password"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/ic_password"
                        android:gravity="center"
                        android:onClick="onMenuItemSelected"
                        android:padding="8dp"
                        android:text="Change Wifi Password"
                        android:textColor="@color/white"
                        android:background="@drawable/click_indicator"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/orange"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0dp">

                    <TextView
                        android:id="@+id/service_change_plan"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/ic_change_plan"
                        android:gravity="center"
                        android:onClick="onMenuItemSelected"
                        android:padding="8dp"
                        android:text="Change Service Plan"
                        android:textColor="@color/white"
                        android:background="@drawable/click_indicator"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/beige"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0dp">

                    <TextView
                        android:id="@+id/service_manage_settings"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/ic_settings"
                        android:gravity="center"
                        android:onClick="onMenuItemSelected"
                        android:padding="8dp"
                        android:text="Manage Settings"
                        android:textColor="@color/white"
                        android:background="@drawable/click_indicator"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/data_menu_orange"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0dp">

                    <TextView
                        android:id="@+id/service_choose_plan"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/ic_choose_plan"
                        android:gravity="center"
                        android:onClick="onMenuItemSelected"
                        android:padding="8dp"
                        android:text="Choose Plan"
                        android:textColor="@color/white"
                        android:background="@drawable/click_indicator"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="8dp"
                android:background="@color/main_grey" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/imageView5"
        style="@style/StyledTopImageView" />

    <ImageView
        android:id="@+id/home_button"
        style="@style/PageBackButton"
        android:onClick="onMenuClicked"
        android:src="@drawable/ic_menu" />

    <TextView
        android:id="@+id/page_title"
        style="@style/PageTitle"
        android:text="Manage Service" />

    <TextView
        android:id="@+id/page_subtitle"
        style="@style/PageSubTitle"
        android:text="User ID: 100112952" />

</android.support.constraint.ConstraintLayout>
