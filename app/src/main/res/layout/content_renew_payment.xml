<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RenewPaymentActivity"
    tools:showIn="@layout/activity_renew_payment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:alpha="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="@color/main_grey" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="0"
                android:stretchColumns="1">

                <TableRow android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/SubheadingTextTheme"
                        android:layout_width="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/white"
                        android:text="Amount Payable"
                        android:textStyle="normal" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/grey_border_rect_shape"
                        android:inputType="number"
                        android:padding="4dp" />

                </TableRow>

                <TableRow android:layout_marginBottom="15dp">

                    <TextView
                        style="@style/SubheadingTextTheme"
                        android:layout_width="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/white"
                        android:text="Number of Months"
                        android:textStyle="normal" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/grey_border_rect_shape"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:drawablePadding="4dp"
                        android:padding="4dp" />

                </TableRow>

                <TableRow android:layout_marginBottom="20dp">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/grey_border_rect_shape"
                            android:text="Cancel"
                            android:textSize="16sp" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/red_fill_rect_shape"
                            android:text="Proceed"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:onClick="makePayment"/>
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/main_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Payment Options"
                android:textSize="25sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/grey_border_square_shape"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/mastercard" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/grey_border_square_shape"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/visa" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/grey_border_square_shape"
                    android:scaleType="centerInside"
                    android:src="@drawable/interswitch" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/grey_border_square_shape"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/verve" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>