<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DataUsageActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="150dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="Expiry Date: February 22, 2019"
                    android:maxWidth="250dp"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <!--The custom view goes here-->
                <com.ipnx.ipnxmobile.customviews.DataChartView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:totalDataColor="@color/data_menu_blue"
                    app:usedDataColor="@color/orange"
                    app:centerColor="@color/data_menu_green"
                    app:totalDataValue="500.0"
                    app:usedDataValue="100.0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:text="Data Allowance: 100GB"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:text="Data Rolled Over: 0.00GB"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:text="Total Data: 100GB"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_margin="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="From"
                        android:gravity="center"
                        android:textColor="@color/indigo"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="To"
                        android:gravity="center"
                        android:textColor="@color/indigo"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">
                    <TextView
                        style="@style/DateTextViewTheme"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:text="2019-02-01"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"/>
                    <TextView
                        style="@style/DateTextViewTheme"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:text="2019-02-01"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/indigo_fill_button"
                        android:onClick="onSubmitClicked"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Historical Usage"
                    android:background="@color/orange"
                    android:elevation="5dp"
                    android:textColor="@color/black_text"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#EFEFEF"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textSize="18sp"
                        android:textColor="@color/black_text"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Data"
                        android:gravity="end"
                        android:textSize="18sp"
                        android:textColor="@color/black_text"/>

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    tools:listitem="@layout/item_data_usage"
                    tools:itemCount="5">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/imageView5"
        style="@style/StyledTopImageView" />

    <ImageView
        android:id="@+id/home_button"
        style="@style/PageBackButton"
        android:onClick="onBackClicked"/>

    <TextView
        android:id="@+id/page_title"
        style="@style/PageTitle"
        android:text="Data Usage"/>

    <TextView
        android:id="@+id/page_subtitle"
        style="@style/PageSubTitle"
        android:text="Service Plan: Advantage Basic" />

</android.support.constraint.ConstraintLayout>
