<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RenewPaymentActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="150dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/renew_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="Current Balance: 33050"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <TextView
                    style="@style/SubheadingTextTheme"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/white"
                    android:text="Amount Payable"
                    android:textColor="@color/indigo"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/renew_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/grey_border_rect_shape"
                    android:inputType="number"
                    android:padding="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/indigo_fill_button"
                        android:onClick="makePayment"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/indigo_border_button"
                        android:onClick="cancelPayment"
                        android:text="Cancel"
                        android:textColor="@color/indigo"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@color/orange"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="Payment Methods"
                    android:textColor="@color/black_text"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#EFEFEF"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="0dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/mastercard" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#EFEFEF"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="0dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:elevation="5dp"
                            android:padding="4dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/visa" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#EFEFEF"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="0dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/interswitch" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#EFEFEF"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="0dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/verve" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>


    <ImageView style="@style/StyledTopImageView" />

    <ImageView
        android:id="@+id/home_button"
        style="@style/PageBackButton"
        android:onClick="onBackClicked"/>

    <TextView
        android:id="@+id/page_title"
        style="@style/PageTitle"
        android:text="Renew" />

    <TextView
        android:id="@+id/page_subtitle"
        style="@style/PageSubTitle"
        android:text="Service Plan: Advantage Basic" />

</android.support.constraint.ConstraintLayout>
