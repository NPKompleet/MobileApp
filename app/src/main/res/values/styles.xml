<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/signin_button_text</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SignInTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ManagedServicesTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/main_red</item>
    </style>

    <style name="HeadingTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/main_red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubheadingTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:background">@color/main_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DataTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/main_red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/main_red</item>
    </style>

    <style name="DateTextViewTheme">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/main_red</item>
        <item name="android:drawableRight">@drawable/ic_calendar</item>
        <item name="android:drawableEnd">@drawable/ic_calendar</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/grey_border_rect_shape</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@color/white</item>
        <!--<item name="android:textColorPrimary">@color/black_text</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:tint">@color/white</item>
        <!--<item name="android:textColorPrimary">@color/black_text</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="WifiAnalyzerTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>



</resources>
