<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        android:src="@drawable/carousel1"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/carousel_text_banner"
        android:padding="24dp"
        android:translationY="-40dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo_medium"
            android:gravity="center"
            android:text="See the difference for yourself on the 100% fibre-optic service FOS"
            android:textColor="@color/black_text"
            android:textSize="24sp"
            android:layout_marginTop="32dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Join Nigeria's largest\n Open Access FTTH Service"
            android:textSize="22sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>