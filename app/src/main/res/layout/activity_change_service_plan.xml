<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ChangeServicePlanActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="150dp"
                android:paddingBottom="100dp">

                <TextView
                    android:id="@+id/service_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/data_grey"
                    android:fontFamily="@font/heebo_medium"
                    android:paddingTop="8dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Advantage Basic"
                    android:textColor="@color/black_text"
                    android:textSize="22sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/data_grey"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="8dp">

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/main_grey" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line1"
                        android:text="â‚¦45,000"
                        android:textColor="@color/black_text"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/balance"
                        android:text="Balance" />

                    <TextView
                        android:id="@+id/activationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line1"
                        android:layout_alignParentRight="true"
                        android:text="May 1, 2019"
                        android:textColor="@color/black_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activationDate"
                        android:layout_alignParentRight="true"
                        android:text="Activation Date" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv2"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/main_grey" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2"
                        android:text="Active"
                        android:textColor="@color/black_text"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/status"
                        android:text="status" />

                    <TextView
                        android:id="@+id/expiryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2"
                        android:layout_alignParentRight="true"
                        android:text="May 1, 2019"
                        android:textColor="@color/black_text"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expiryDate"
                        android:layout_alignParentRight="true"
                        android:text="Expiry Date" />

                </RelativeLayout>

                <Button
                    android:id="@+id/data_menu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/red_fill_button"
                    android:drawableRight="@drawable/ic_play_arrow2"
                    android:paddingRight="16dp"
                    android:onClick="onSelectPlanClicked"
                    android:text="Select New Service Plan"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAllCaps="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">
                    <TextView
                        android:id="@+id/amountToPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N0.00"
                        android:textColor="@color/black_text"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/amountToPay"
                        android:text="Amount To Pay" />

                    <TextView
                        android:id="@+id/new_plan_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="N0.00"
                        android:textColor="@color/black_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/new_plan_cost"
                        android:layout_alignParentRight="true"
                        android:text="Cost of New Plan" />

                    <TextView
                        android:id="@+id/service_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Ikoyi, Lagos"
                        android:textColor="@color/black_text"
                        android:textSize="20sp"
                        android:layout_below="@+id/tv3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/service_location"
                        android:text="Service Location" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="24dp">
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="Continue"
                        android:textSize="16sp"
                        android:textColor="@color/red_button"
                        android:textAllCaps="true"
                        android:background="@drawable/red_border_button"
                        android:layout_margin="24dp"/>

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="Cancel"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:background="@drawable/red_fill_button"
                        android:layout_margin="24dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <ImageView style="@style/StyledTopImageView" />

    <ImageView
        android:id="@+id/home_button"
        style="@style/PageBackButton"
        android:onClick="onBackClicked" />

    <TextView
        android:id="@+id/page_title"
        style="@style/PageTitle"
        android:text="Change Plan" />

    <TextView
        android:id="@+id/page_subtitle"
        style="@style/PageSubTitle"
        android:text="User ID: 100112952" />

    <include layout="@layout/bottom_nav_bar" />
</android.support.constraint.ConstraintLayout>